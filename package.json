    "testcafe": "^1.14.2",
    "ts-jest": "^26.4.4",
    "typeforce": "^1.11.3",
    "uuid": "^8.3.2",
    "wasm-pack": "^0.10.0",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto": "npm:crypto-browserify",
    "crypto-browserify": "^3.12.0",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "rewire": "^6.0.0",
    "stream": "npm:stream-browserify",
    "stream-browserify": "^3.0.0",
    "constants-browserify": "^1.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.0",
    "web-vitals": "^2.1.2",
    "web3": "^1.6.1",
    "conf": "^1.2.0",
    "limiter": "^2.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": {
    "name": "Mercury Wallet",
    "email": "main@mercurywallet.com",
    "url": "https://mercurywallet.com"
  },
  "build": {
    "asar": false,
    "appId": "com.mercurywallet.wallet",
    "productName": "mercurywallet",
    "copyright": "Copyright Â© 2022 ${author}",
    "afterSign": "./afterSignHook.js",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "icon": "./public/icons/mercury-symbol-tri-color.icns"
    },
    "linux": {
      "icon": "./public/icons/mercury-symbol-tri-color.icns"
    },
    "win": {
      "icon": "./public/icons/mercury-symbol-tri-color.png"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "layer2tech",
        "repo": "mercury-wallet"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/etc",
        "to": "Resources/etc",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/LICENCES",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^5.15.0",
    "**/@typescript-eslint/parser": "^5.15.0"
  }
}
