{
  "name": "mercurywallet",
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "client-wasm/pkg"
    ],
    "modulePaths": [
      "src",
      "node_modules",
      "client-wasm/pkg"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "d.ts",
      "wasm"
    ],
    "modulePathIgnorePatterns": [
      "src/e2e"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "repository": "github:layer2tech/mercury-wallet",
  "version": "v0.6.28",
  "license": "MIT/Apache-2.0",
  "homepage": "./",
  "scripts": {
    "install-local": "yarn add file:./tor-adapter",
    "start": "react-app-rewired start --testnet",
    "prebuild": "DATE=`date` && YEAR=${DATE##* } && MERC_YEAR=`jq .build.copyright package.json | awk '{print $3}'` && if [ $YEAR -ne $MERC_YEAR ]; then echo 'package.json prebuild - expected .build.copyright year' $YEAR ', got' $MERC_YEAR '- please update year' && return 1; fi",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "test-node": "react-app-rewired test --env=node",
    "eject": "react-scripts eject",
    "dev": "NODE_ENV=development BROWSER=none nf start -p 3000",
    "dev-windows": "cross-env BROWSER=none nf start -p 3000",
    "build-wasm": "wasm-pack build --dev client-wasm"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@types/uuid": "^8.3.0",
    "concurrently": "^5.3.0",
    "foreman": "^3.0.1",
    "mock-req-res": "^1.2.0",
    "react-app-rewired": "^2.2.1",
    "react-scripts": "^5.0.1",
    "sinon": "^13.0.1",
    "typescript": "^4.6.4",
    "wait-on": "^5.2.0",
    "wasm-loader": "^1.3.0"
  },
  "dependencies": {
    "@aguycalled/electrum-client-js": "^0.1.9",
    "@esfx/async-semaphore": "^1.0.0-pre.19",
    "@keep-network/electrum-client-js": "keep-network/electrum-client-js",
    "@reduxjs/toolkit": "^1.4.0",
    "@types/app-root-dir": "^0.1.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "alert": "^5.0.10",
    "app-root-dir": "^1.0.2",
    "async-mutex": "^0.3.1",
    "async-semaphore": "^2.0.0",
    "axios": "^0.21.1",
    "bech32": "^1.1.4",
    "bigint-mod-arith": "^2.0.8",
    "bip32": "^2.0.6",
    "bip32-utils": "^0.11.1",
    "bip39": "^3.0.3",
    "bitcoinjs-lib": "^5.2.0",
    "bn": "^1.0.5",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.3",
    "buffer-json": "^2.0.0",
    "client-wasm": "file:client-wasm/pkg",
    "cross-env": "^7.0.3",
    "eciesjs12b": "^0.3.11",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fix-path": "^3.0.0",
    "geoip-country": "^4.0.98",
    "html-react-parser": "^0.14.2",
    "i18n-iso-countries": "^7.1.0",
    "install": "^0.13.0",
    "lodash.clonedeep": "^4.5.0",
    "mercury-wallet-tor-adapter": "file:./tor-adapter",
    "moment": "^2.29.1",
    "msgpack-lite": "^0.1.26",
    "mutex-promise": "^0.1.0",
    "net": "^1.0.2",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-bootstrap": "^1.4.0",
    "react-copy-to-clipboard": "^5.0.3",
    "react-dom": "^16.1.1",
    "react-hook-form": "^6.15.1",
    "react-loading": "^2.0.3",
    "react-moment": "^1.0.0",
    "react-quantity-picker": "^1.0.3",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-table": "^7.6.2",
