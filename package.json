{
  "name": "mercurywallet",
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src",
      "client-wasm/pkg"
    ],
    "modulePaths": [
      "src",
      "node_modules",
      "client-wasm/pkg"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "d.ts",
      "wasm"
    ],
    "modulePathIgnorePatterns": [
      "src/e2e"
    ]
  },
  "repository": "github:layer2tech/mercury-wallet",
  "version": "v0.7.6",
  "license": "MIT/Apache-2.0",
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "e2e": "testcafe \"electron:.\" \"./src/e2e/**/*.js\"",
    "install-local": "yarn add file:./tor-adapter",
    "start": "react-app-rewired start",
    "prebuild": "DATE=`date` && YEAR=${DATE##* } && MERC_YEAR=`jq .build.copyright package.json | awk '{print $3}'` && if [ $YEAR -ne $MERC_YEAR ]; then echo 'package.json prebuild - expected .build.copyright year' $YEAR ', got' $MERC_YEAR '- please update year' && return 1; fi",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "test-node": "react-app-rewired test --env=node",
    "eject": "react-scripts eject",
    "electron": "electron --inspect=5858 --testnet --term_existing .",
    "dev": "NODE_ENV=development BROWSER=none nf start -p 3000",
    "dev-windows": "cross-env BROWSER=none nf start -p 3000",
    "postinstall": "electron-builder install-app-deps",
    "build-wasm": "wasm-pack build --dev client-wasm",
    "app-windows": "yarn install-local && yarn install && yarn build && electron-builder -w -p always",
    "app-windows-local-test": "yarn install-local && yarn install && yarn build && DEBUG=electron-builder electron-builder -w -p never",
    "app-linux": "yarn install-local && yarn install && yarn build && electron-builder -l AppImage -p always",
    "app-linux-local-test": "yarn install-local && yarn install && yarn build && DEBUG=electron-builder electron-builder -l AppImage -p never",
    "app-macos": "yarn install-local && yarn install && yarn build && electron-builder -m -p always",
    "app-macos-local-test": "yarn install-local && yarn install && yarn build && DEBUG=electron-builder electron-builder -m -p never",
    "app-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "private": true,
  "dependencies": {
    "@aguycalled/electrum-client-js": "^0.1.14",
    "@electron/remote": "^2.0.8",
    "@esfx/async-semaphore": "^1.0.0-pre.30",
    "async-mutex": "^0.3.2",
    "async-semaphore": "^2.0.0",
    "axios": "^0.27.2",
    "client-wasm": "file:client-wasm/pkg",
    "electron-store": "^8.0.2",
    "mercury-wallet-tor-adapter": "file:./tor-adapter",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-bootstrap": "^2.4.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.33.1",
    "react-loading": "^2.0.3",
    "react-moment": "^1.1.2",
    "react-quantity-picker": "^1.0.3",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-table": "^7.8.0",
    "react-use-clipboard": "^1.0.8",
    "request-promise": "^4.2.6",
    "typeforce": "^1.18.0",
    "typescript": "^4.7.4",
    "semver": "^7.3.7",
    "socks": "^2.6.1",
    "socks-proxy-agent": "^5.0.0",
    "superagent": "^6.1.0",
    "suppress-warnings": "^1.0.2",
    "testcafe": "^1.14.2",
    "testcafe-browser-provider-electron": "^0.0.16",
    "ts-jest": "^26.4.4",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.43",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.2.2",
    "electron": "^19.0.8",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^23.1.0",
    "electron-builder-notarize": "^1.5.0",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-log": "^4.4.8",
    "electron-notarize": "^1.2.1",
    "electron-react-devtools": "^0.5.3",
    "request-debug": "^0.2.0",
    "wasm-loader": "^1.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": {
    "name": "Mercury Wallet",
    "email": "main@mercurywallet.com",
    "url": "https://mercurywallet.com"
  },
  "build": {
    "asar": false,
    "appId": "com.mercurywallet.wallet",
    "productName": "mercurywallet",
    "copyright": "Copyright Â© 2022 ${author}",
    "afterSign": "./afterSignHook.js",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist",
      "icon": "./public/icons/mercury-symbol-tri-color.icns"
    },
    "linux": {
      "icon": "./public/icons/mercury-symbol-tri-color.icns"
    },
    "win": {
      "icon": "./public/icons/mercury-symbol-tri-color.png"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "layer2tech",
        "repo": "mercury-wallet"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraFiles": [
      {
        "from": "resources/${os}",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/etc",
        "to": "Resources/etc",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/LICENCES",
        "to": "Resources/bin",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}